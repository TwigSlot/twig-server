[
  {
    "id": "api-public",
    "version": "v0.39.2",
    "match": {
      "url": "<http|https>://<api.twig.tchlabs.net|flask.docker.localhost><.*>/user/<.*>",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User": "{{ print .Subject }}"
          }
        }
      }
    ]
  },
  {
    "id": "api-edit-restricted",
    "version": "v0.39.2",
    "match": {
      "url": "<http|https>://<api.twig.tchlabs.net|flask.docker.localhost><.*>/project/<.*>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },
  {
    "id": "api-edit-restricted",
    "version": "v0.39.2",
    "match": {
      "url": "<http|https>://<twig.tchlabs.net|flask.docker.localhost><.*>/project/<.*>",
      "methods": [
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ]
    },
    "authenticators": [
      {
        "handler": "cookie_session"
      }
    ],
    "authorizer": {
      "handler": "deny"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User": "{{ print .Subject }}"
          }
        }
      }
    ]
  },
  {
    "id": "allow-anonymous-with-header-mutator",
    "version": "v0.39.2",
    "upstream": { 
      "url": "https://httpbin.org/anything/header"
    },
    "match": { 
      "url": "http://<127.0.0.1|localhost|oathkeeper1.docker.localhost>:<6955|6980>/anything/header",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [ 
      {
        "handler": "anonymous"  
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User": "{{ print .Subject }}"
          }
        }
      }
    ]
  },
  {
    "id": "deny-anonymous",
    "version": "v0.39.2",
    "upstream": {
      "url": "https://httpbin.org/anything/deny"
    },
    "match": {
      "url": "http://<127.0.0.1|localhost|oathkeeper1.docker.localhost>:<6955|6980>/anything/deny",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "deny"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ],
    "errors": [
      {
        "handler": "json",
        "config": {
          "when": [
            {
              "request": {
                "header": {
                  "accept": ["application/json"]
                }
              }
            }
          ]
        }
      },
      {
        "handler": "redirect",
        "config": {
          "when": [
            {
              "request": {
                "header": {
                  "accept": ["text/*"]
                }
              }
            }
          ]
        }
      }
    ]
  },
  {
    "id": "allow-anonymous-with-id-token-mutator",
    "version": "v0.39.2",
    "upstream": {
      "url": "https://httpbin.org/anything/id_token"
    },
    "match": {
      "url": "http://<127.0.0.1|localhost|oathkeeper1.docker.localhost>:<6955|6980>/anything/id_token",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "id_token"
      }
    ]
  }
]
